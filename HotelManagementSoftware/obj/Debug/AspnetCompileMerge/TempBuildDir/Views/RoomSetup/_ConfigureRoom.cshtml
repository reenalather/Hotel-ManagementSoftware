@Html.Partial("_NavbarPartial")

<div class="jumbotron">
    <form>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label for="ID" class="col-sm-4 col-form-label">Hotel Name</label>
                    <input type="text" id="hotel-name"class="form-control-plaintext" name="hotel-name" placeholder="--Grand Hotel--" />
                </div>
                <div class="form-group row">
                    <label for="room-number" class="col-sm-4 col-form-label">Room Number</label>
                    <input type="text" id="room-number" class="form-control-plaintext" name="room-number" placeholder="--4564289--" />
                </div><br />
                <div class="form-group row">
                    <label for="room-type" class="col-sm-4 col-form-label">Room Type</label>
                    <select class="col-sm-3 form-control" id="room-type">
                        <option></option>
                        <option>Single Bed</option>
                        <option>Double Bed</option>
                    </select>
                </div>
                <div class="form-group row">
                    <label for="room-status" class="col-sm-4 col-form-label">Room Status</label>
                    <select class="col-sm-3 form-control" id="room-status">
                        <option></option>
                        <option>Available</option>
                        <option>Not Available</option>

                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <label for="booking-address" class="col-sm-4 col-form-label">Booking Address</label>
                    <input type="text" id="booking-address"class="col-sm-9 form-control-plaintext" name="booking-address" placeholder="text" /><br><br />
                </div><br /><br />
                <div class="form-group row">
                    <label for="no-person" class="col-sm-4 col-form-label">No.of Person</label>
                    <select class="col-sm-3 form-control" id="no-person">
                        <option></option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
                <div class="form-group row">
                    <label for="room-rate" class="col-sm-4 col-form-label">Room Rate</label>
                    <select class="col-sm-3 form-control" id="room-rate">
                        <option></option>
                        <option>Single Room- $180</option>
                        <option>Double BedRoom- $250</option>
                    </select>
                </div>
                <input type="button" value="Save" class="btn btn-secondary btn-lg active" aria-pressed="true" onclick="post()" />
            </div>
        </div>
    </form>
</div>

<script>
    function post() {
        var data = {
            HotelName: document.getElementById("hotel-name").value,
            BookingAddress: document.getElementById("booking-address").value,
            RoomNumber: document.getElementById("room-number").value,
            RoomType: document.getElementById("room-type").value,
            NoOfPerson: document.getElementById("no-person").value,
            RoomStatus: document.getElementById("room-status").value,
            RoomRate: document.getElementById("room-rate").value,          
        }

        $.ajax({
            url: '@Url.Action("UpdateRoomDetails")',

            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: console.log("success"),
            error: function (jqXHR, exception) {
                console.log(jqXHR);
                console.log(exception);
            }
        })

    }

</script>








@{
    ViewBag.Title = "Payment";
}

@section Banner{
    <div style="height: 200px; overflow: hidden;">
        @*<img src="@Url.Content("../../Content/Images/payment.JPG")" style="display: block; transform: translate3d(-50%, 241px, 0px);" alt="Unsplashed background img 1">*@
        <img src="@Url.Content("../../Content/Images/payment.JPG")" style="width: 100%;">
    </div>
}

<h2>Payment</h2>

<div class="jumbotron">
    <form class="form-horizontal">
        <div class="col-md-12">
            <div class="form-group row">
                <h4>Payment Method</h4>
                <label class="btn btn-secondary"></label>
                <input type="radio" name="options" id="option2" autocomplete="off" />

            </div>
            <div class="form-group row">
                <input id="CardNumber" type="text" class="col-sm-4 form-control-plaintext" name="CardNumber" placeholder="Debit/Credit Card Number" />
                <input id="SecurityCode" type="text" class="col-sm-2 form-control-plaintext" name="SecurityCode" placeholder=Security Code" />
            </div>
        </div>
        <div class="form-group row">
            <label for="ExpiresDate" class="col-sm-1 col-form-label">Expires</label>
            <input id="Month" type="text" class="col-sm-2 form-control-plaintext" name="Month" placeholder="Month" />
            <input id="Year" type="text" class="col-sm-2-form-control-plaintext" name="Year" placeholder="Year" />

        </div>
        <div class="form-group row">
            <label for="ExpiresDate" class="col-sm-4 col-form-label">Pay with two debit/credit cards</label>
        </div>
        <div class="form-group row">
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option2" autocomplete="off"> PayPal
            </label>
        </div>
        <div action="confirmation">
            <button type="Submit" class="btn btn- btn-lg active" aria-pressed="true">Booking Confirmation</button>
        </div>
    </form>
</div>
   



<script>
    function post() {
        var data = {

            CardNumber: document.getElementById("CardNumber").value,
            SecurityCode: document.getElementById("SecurityCode").value,
            ExpireMonth: document.getElementById("Month").value,
            ExpireYear: document.getElementById("Year").value,
        }

        $.ajax({
            url: '@Url.Action("UpdatePaymentDetails")',

            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: console.log("success"),
            error: function (jqXHR, exception) {
                console.log(jqXHR);
                console.log(exception);
            }
        })

    }

</script>

